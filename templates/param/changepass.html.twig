{% extends 'base.html.twig' %}

{% block title %}Changer de mot de passe{% endblock %}

{% block body %}
<div class="jumbotron">
	<div class="col-md-6 offset-md-3">
		<form method="POST">
			<h1>Changer votre mot de passe</h1>
			{% if message %}
				<h3 style="color:red;">{{ message }}</h3>
			{% endif %}

			<div class="form-group">
				<label for="nvpass">Nouveau mot de passe</label>
				<input type="password" name="password" class="form-control" required>
			</div>

			<div class="form-group">
				<label for="mdp">Confirmer le mot de passe</label>
				<input type="password" name="nvpassword" class="form-control" required>
			</div>

			<input type="submit" value="Changer" class="btn btn-primary">
		</form>
    </div>
</div>
{% endblock %}