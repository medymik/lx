{% extends 'base.html.twig' %}
{% block title %}
Historique
{% endblock %}
{% block body %}
	<div class="jumbotron">
            <h1 class="text-center">Demandes de retraits</h1>
            <table class="table">
                <thead>
                    <th>Montant</th>
                    <th>Date de demande</th>
                    <th>Method</th>
                    <th>Status</th>
                </thead>
                <tbody>
                    {% for demande in demandes %}
                        <tr>
                            <td>{{ demande.montant }}</td>
                            <td>{{ demande.date.format('Y/m/d') }}</td>
                            <td>{{ demande.method }}</td>
                            <td>{{ demande.status }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
    </div>
{% endblock %}
